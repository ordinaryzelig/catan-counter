%html{html_attrs}
  %head
    = stylesheet_link_tag 'screen', :cache => true

  %body
    - if flash.any?
      #flash
        - flash.each do |type, messages|
          %div{:class => type}
            - (messages.is_a?(Array) ? messages : [messages]).each do |message|
              %div= message

    #main
      = yield
